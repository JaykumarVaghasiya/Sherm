<resources>
    <style name="Base.Theme.ShermTheme" parent="Theme.Material3.Light">
        <item name="colorSurface">@color/green</item>
        <item name="colorPrimary">@color/green</item>
        <item name="materialCardViewStyle">@style/cardView</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="fontFamily">@font/montserrat</item>
       <item name="materialCalendarTheme">@style/ThemeOverlay.ShermTheme.DatePicker</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.ShermTheme.Dialog</item>
    </style>

    <style name="ThemeOverlay.ShermTheme.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">@color/offWhite</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorOnPrimary">@color/darkGreen</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cardView" parent="Base.Theme.ShermTheme">
        <item name="colorOnSurface">@color/offWhite</item>
    </style>

    <style name="ThemeOverlay.ShermTheme.DatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/green</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorOnPrimary">@color/darkGreen</item>

    </style>

</resources>